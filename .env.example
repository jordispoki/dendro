# Database
DATABASE_URL="file:./dev.db"

# LLM (maps to runtimeConfig.geminiApiKey)
NUXT_GEMINI_API_KEY="your-gemini-api-key"

# OpenRouter (maps to runtimeConfig.openrouterApiKey) — get key at openrouter.ai
NUXT_OPENROUTER_API_KEY="your-openrouter-api-key"

# Auth session (maps to runtimeConfig.sessionPassword — min 32 chars)
NUXT_SESSION_PASSWORD="your-session-password-min-32-chars-long"

# OAuth providers (nuxt-auth-utils reads these automatically)
NUXT_OAUTH_GITHUB_CLIENT_ID="your-github-client-id"
NUXT_OAUTH_GITHUB_CLIENT_SECRET="your-github-client-secret"
NUXT_OAUTH_GOOGLE_CLIENT_ID="your-google-client-id"
NUXT_OAUTH_GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email magic link (maps to runtimeConfig.resendApiKey / fromEmail)
NUXT_RESEND_API_KEY="your-resend-api-key"
NUXT_FROM_EMAIL="noreply@chat-tree.app"
