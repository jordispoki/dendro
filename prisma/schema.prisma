// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String?
  avatar       String?
  createdAt    DateTime      @default(now())
  trees        Tree[]
  settings     UserSettings?
  activity     ActivityLog[]
}

model ActivityLog {
  id             String   @id @default(cuid())
  userId         String
  action         String
  payload        String   @default("{}")
  treeId         String?
  conversationId String?
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id])
}

model UserSettings {
  id                   String @id @default(cuid())
  userId               String @unique
  systemPrompt         String @default("")
  enabledModels        String @default("[]")  // JSON: {value,label,free?}[]
  defaultConvModel     String @default("openrouter/deepseek/deepseek-chat-v3-0324")
  defaultConvVerbosity String @default("normal")
  defaultBranchModel   String @default("openrouter/deepseek/deepseek-chat-v3-0324")
  defaultBranchVerbosity String @default("normal")
  streamingEnabled      Boolean @default(true)
  localExecutionEnabled Boolean @default(false)
  remoteHosts           String  @default("[]")  // JSON: {id,label,host,port,username,keyPath}[]
  sshConfigPath         String  @default("")
  urlFetchSameDomain    Boolean @default(false)
  homeLayout            String  @default("select")
  popupSearchEnabled    Boolean @default(true)
  popupSummarizeEnabled Boolean @default(true)
  user                 User   @relation(fields: [userId], references: [id])
}

model Tree {
  id            String         @id @default(cuid())
  userId        String
  title         String
  contextUrls   String         @default("[]") // JSON: {url,content,scrapedAt}[]
  pinnedAt      DateTime?
  createdAt     DateTime       @default(now())
  deletedAt     DateTime?
  user          User           @relation(fields: [userId], references: [id])
  conversations Conversation[]
  projectFiles  ProjectFile[]
}

model Conversation {
  id              String         @id @default(cuid())
  treeId          String
  parentId        String?
  title           String
  model           String         @default("openrouter/deepseek/deepseek-chat-v3-0324")
  verbosity       String         @default("normal")
  branchText      String?
  branchMessageId String?
  branchSummary   String?
  branchType      String?   // null = regular; 'run' = created via Run button
  terminalResult  String    @default("{}") // JSON: { stdout, stderr, exitCode } of last terminal run
  summaryCache    String    @default("{}") // JSON: { [messageId]: summary }
  contextUrls     String    @default("[]") // JSON: {url,content,scrapedAt}[]
  closedAt        DateTime?
  deletedAt       DateTime?
  createdAt       DateTime       @default(now())
  tree            Tree           @relation(fields: [treeId], references: [id], onDelete: Cascade)
  parent          Conversation?  @relation("ConversationChildren", fields: [parentId], references: [id])
  children        Conversation[] @relation("ConversationChildren")
  messages        Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  role           String
  content        String
  attachments    String       @default("[]")  // JSON: {filename,size,mimeType}[]
  fetchedUrls    String       @default("[]")  // JSON: string[]
  inputTokens    Int?
  outputTokens   Int?
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model ProjectFile {
  id        String   @id @default(cuid())
  treeId    String
  name      String
  content   String
  createdAt DateTime @default(now())
  tree      Tree     @relation(fields: [treeId], references: [id], onDelete: Cascade)
}
